extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Organizers'
    - var pageMainTitle = 'Organizers'
    - var pageSubTitle = "Meet the Organizers and Speakers"
    - var sidenavStyle = 'sb-sidenav-dark'
    - var SpeakersList = [{name: "Yann LeCun", img: "yann-lecun.jpg", title: "Keynote Speaker", text: "Prof at Courant Institute NY and VP & Chief AI Scientist at Meta (ex Facebook)"},{name: "Michael Jordan", img: "default.png", title: "AI Expert", text: "Professor, Inria and MBZUAI"},{name: "Benoit Bergeret", img: "default.png", title: "Panel Moderator", text: "Executive Director of ESSEC Business School's Metalab for Data, Technology, and Society"},{name: "Eric Moulines", img: "eric-moulines.png", title: "Professor of AI", text: "Prof at Ecole Polytechnique (X) and affiliate prof UM6P"},{name: "Luciano Borges", img: "default.png", title: "Guest Speaker", text: "CEO and director of SIANA (JV ONCF and SNCF) , Moroccan Company for High-Speed Train Maintenance"}, {name: "Jawad Alaoui", img: "default.png", title: "Panelist", text: "co-founder of NORMA, a company that provides data science and machine learning solutions"}]
    - var OrganisersList = [{name: "Mohammed ElRhabi", img: "mohammed-elrhabi.jpeg", role: "Event Coordinator", text: "Head of Master of Data Engineering & Machine Learning (DEML)"},{name: "Prof. Nicolas Cheimanoff", img: "nicolas-c.png", role: "Event Director", text: " Director of EMINES - Universit√© Mohammed VI Polytechnique"},{name: "Speaker 3", img: "default.png", role: "Data Scientist", text: "Workshop Lead"},{name: "Eric Moulines", img: "eric-moulines.png", role: "Professor of AI", text: "Prof at Ecole Polytechnique (X) and affiliate prof UM6P"}]

block content
    .container.d-flex.min-vh-100
        .col-0.col-lg-1.emp1 &nbsp;
        .col-12.col-lg-10.emp1.mt-3
            include includes/page-header.pug
            
            // Speakers Section
            .m-4.bg-white.text-dark
                h2.text-dark Featured Speakers
                .row.d-flex.justify-content-center.mt-4
                    each speaker in SpeakersList
                        .col-md-3.mb-4
                            .card.shadow.border-0
                                if speaker.img
                                    img.card-img-top(src=`assets/speakers/${speaker.img}`, alt=speaker.name)
                                else
                                    img.card-img-top(src="assets/speakers/default.jpg", alt=speaker.name)
                                .card-body
                                    h5.card-title= speaker.name
                                    p.card-subtitle.mb-2.text-muted= speaker.title
                                    p.card-text= speaker.text

            // Organizers Section
            .m-4.bg-white.text-dark
                h2.text-dark Meet the Organizers
                .row.d-flex.justify-content-center.mt-4
                    each organizer in OrganisersList
                        .col-md-3.mb-4
                            .card.shadow.border-0
                                if organizer.img
                                    img.card-img-top(src=`assets/team/${organizer.img}`, alt=organizer.name)
                                else
                                    img.card-img-top(src="assets/team/default.png", alt=organizer.name)
                                .card-body
                                    h5.card-title= organizer.name
                                    p.card-subtitle.mb-2.text-muted= organizer.role
                                    p.card-text= organizer.text

        .col-0.col-lg-1.emp1 &nbsp;
