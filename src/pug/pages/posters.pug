extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Posters'
    - var pageMainTitle = 'Posters'
    - var sidenavStyle = 'sb-sidenav-dark'
    - var posterList = [{"title": "Generative Adversarial Networks for Image Synthesis", "authors": "Alex Johnson", "uter": "AI Vision", "fname": "poster-jrecc-Alex-Johnson.pdf", "status": "public"}, {"title": "Reinforcement Learning in Dynamic Environments for Robotics", "authors": "Emma Williams", "uter": "AI Robotics", "fname": "poster-jrecc-Emma-Williams.pdf", "status": "public"}, {"title": "Deep Neural Networks for Predicting Stock Market Trends", "authors": "Chris Lee", "uter": "Financial AI", "fname": "poster-jrecc-Chris-Lee.pdf", "status": "private"}, {"title": "Natural Language Processing for Automated Legal Document Review", "authors": "Sophia Davis", "uter": "LegalTech AI", "fname": "poster-jrecc-Sophia-Davis.pdf", "status": "public"}, {"title": "AI in Predictive Maintenance for Manufacturing Systems", "authors": "Liam Brown", "uter": "Industry AI", "fname": "poster-jrecc-Liam-Brown.pdf", "status": "public"}, {"title": "Ethical AI: Bias Mitigation in Machine Learning Models", "authors": "Isabella Miller", "uter": "Ethical AI", "fname": "poster-jrecc-Isabella-Miller.pdf", "status": "public"}, {"title": "Transformer Models for Real-time Speech Translation", "authors": "Mason Taylor", "uter": "NLP Research", "fname": "poster-jrecc-Mason-Taylor.pdf", "status": "public"}, {"title": "AI-Based Predictive Healthcare Systems for Chronic Disease Monitoring", "authors": "Ava Thompson", "uter": "Health AI", "fname": "poster-jrecc-Ava-Thompson.pdf", "status": "private"}, {"title": "AI-Driven Drug Discovery: Accelerating the Search for New Treatments", "authors": "Elijah White", "uter": "BioAI", "fname": "poster-jrecc-Elijah-White.pdf", "status": "public"}, {"title": "Explainable AI for Autonomous Systems in Transportation", "authors": "Amelia Martinez", "uter": "Explainable AI", "fname": "poster-jrecc-Amelia-Martinez.pdf", "status": "public"}, {"title": "AI-Powered Optimization for Smart Grid Energy Distribution", "authors": "Noah Harris", "uter": "Energy AI", "fname": "poster-jrecc-Noah-Harris.pdf", "status": "public"}, {"title": "Deep Learning in Medical Imaging: Detecting Early-Stage Diseases", "authors": "Charlotte Garcia", "uter": "MedAI", "fname": "poster-jrecc-Charlotte-Garcia.pdf", "status": "public"}, {"title": "AI for Personalized Education: Adapting to Individual Learning Styles", "authors": "James Rodriguez", "uter": "EdTech AI", "fname": "poster-jrecc-James-Rodriguez.pdf", "status": "private"}, {"title": "Multi-modal AI for Autonomous Vehicles: Integrating Vision, Lidar, and Radar", "authors": "Lily Anderson", "uter": "AutoAI", "fname": "poster-jrecc-Lily-Anderson.pdf", "status": "public"}, {"title": "Artificial Intelligence in Environmental Conservation: Modeling Ecosystem Dynamics", "authors": "Oliver King", "uter": "EcoAI", "fname": "poster-jrecc-Oliver-King.pdf", "status": "public"}]

block content
    .container-fluid.px-4.min-vh-100
        include includes/page-header.pug

        .row(id="posters-ref")
            each poster in posterList
                .col-12.col-md-6.col-xl-4.col-xxl-3
                    .card.mb-4.shadow-sm
                        .card-body
                            h6.card-title.text-primary 
                                | #{poster.title}
                            p
                                span.small.text-secondary #{poster.authors},
                                span.small.text-muted #{poster.uter}
                            a.btn.btn-outline-primary.mt-2(href=poster.status === 'public' ? `assets/posters/${poster.fname}` : '#', target="_blank", class=poster.status === 'private' ? 'disabled' : '')
                                i.fas.fa-file-pdf
                                if poster.status === 'private'
                                    |  Accès Limité
                                else if poster.status === 'public'
                                    |  Télécharger le PDF
                                else
                                    |  Document Indisponible
