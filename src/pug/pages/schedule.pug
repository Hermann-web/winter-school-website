block content
    style.
        .schedule-hero {
            background: linear-gradient(135deg, var(--bs-dark) 0%, var(--bs-primary) 100%);
            padding: 3rem 2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }
        .schedule-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 30px 30px;
            animation: gridMove 20s linear infinite;
        }
        @keyframes gridMove {
            0% { transform: translate(0, 0); }
            100% { transform: translate(30px, 30px); }
        }
        .schedule-hero-content {
            position: relative;
            z-index: 1;
        }
        .schedule-hero-title {
            color: #ffffff;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }
        .schedule-hero-subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 1.1rem;
        }
        .schedule-info-banner {
            background: linear-gradient(135deg, var(--bs-secondary) 0%, var(--bs-info) 100%);
            border-radius: 12px;
            padding: 1.25rem 1.5rem;
            margin-bottom: 2.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .schedule-info-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--bs-dark);
            font-weight: 600;
        }
        .schedule-day-card {
            margin-bottom: 3rem;
            opacity: 0;
            animation: fadeInUp 0.6s ease forwards;
        }
        .schedule-day-card:nth-child(1) { animation-delay: 0.1s; }
        .schedule-day-card:nth-child(2) { animation-delay: 0.2s; }
        .schedule-day-card:nth-child(3) { animation-delay: 0.3s; }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .schedule-day-header {
            background: linear-gradient(135deg, var(--bs-primary) 0%, var(--bs-dark) 100%);
            border-radius: 12px 12px 0 0;
            padding: 1.75rem 2rem;
        }
        .day-1 .schedule-day-header {
            background: linear-gradient(135deg, var(--bs-secondary) 0%, var(--bs-light) 100%);
        }
        .day-2 .schedule-day-header {
            background: linear-gradient(135deg, var(--bs-info) 0%, var(--bs-secondary) 100%);
        }
        .day-3 .schedule-day-header {
            background: linear-gradient(135deg, var(--bs-secondary) 0%, var(--bs-primary) 100%);
        }
        .schedule-day-number {
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            opacity: 0.8;
            margin-bottom: 0.25rem;
        }
        .schedule-day-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.25rem;
        }
        .schedule-day-theme {
            font-size: 0.95rem;
            opacity: 0.9;
            font-weight: 500;
        }
        .schedule-sessions {
            background: #ffffff;
            border-radius: 0 0 12px 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        }
        .schedule-session {
            padding: 1.75rem 2rem;
            border-bottom: 1px solid #e8eaed;
            display: grid;
            grid-template-columns: 140px 1fr;
            gap: 2rem;
            align-items: start;
            transition: all 0.3s ease;
            position: relative;
        }
        .schedule-session::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 0;
            height: 100%;
            background: linear-gradient(90deg, rgba(var(--bs-primary-rgb), 0.05) 0%, transparent 100%);
            transition: width 0.4s ease;
        }
        .schedule-session:hover::before {
            width: 100%;
        }
        .schedule-session:hover {
            background: rgba(var(--bs-secondary-rgb), 0.02);
            transform: translateX(4px);
        }
        .schedule-session:last-child {
            border-bottom: none;
        }
        .schedule-time {
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--bs-primary);
            white-space: nowrap;
            padding-top: 0.25rem;
        }
        .schedule-content {
            min-width: 0;
        }
        .schedule-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--bs-dark);
            margin-bottom: 0.5rem;
            line-height: 1.4;
        }
        .schedule-speaker {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-top: 0.75rem;
        }
        .schedule-speaker-name {
            font-size: 0.95rem;
            font-weight: 600;
            color: var(--bs-primary);
        }
        .schedule-speaker-org {
            font-size: 0.875rem;
            color: #5f6368;
        }
        .schedule-tag {
            display: inline-block;
            padding: 0.375rem 0.875rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-top: 0.75rem;
            margin-right: 0.5rem;
        }
        .tag-keynote {
            background: var(--bs-dark);
            color: white;
        }
        .tag-panel {
            background: var(--bs-lighter);
            color: var(--bs-primary);
        }
        .tag-workshop {
            background: rgba(var(--bs-secondary-rgb), 0.2);
            color: var(--bs-dark);
        }
        .tag-special {
            background: var(--bs-secondary);
            color: var(--bs-dark);
        }
        .tag-closing {
            background: var(--bs-light);
            color: white;
        }
        .tag-tbc {
            background: rgba(var(--bs-light-rgb), 0.2);
            color: var(--bs-light);
            font-size: 0.75rem;
            padding: 0.25rem 0.625rem;
        }
        .schedule-moderator {
            font-size: 0.875rem;
            color: var(--bs-secondary);
            font-weight: 500;
            margin-top: 0.5rem;
        }
        .schedule-break {
            background: linear-gradient(135deg, #fafafa 0%, var(--bs-lighter) 100%);
            border-left: 4px solid var(--bs-secondary);
        }
        .schedule-special {
            background: linear-gradient(135deg, rgba(var(--bs-primary-rgb), 0.05) 0%, rgba(var(--bs-secondary-rgb), 0.05) 100%);
            border-left: 4px solid var(--bs-primary);
        }
        @media (max-width: 768px) {
            .schedule-session {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            .schedule-hero-title {
                font-size: 1.75rem;
            }
            .schedule-day-title {
                font-size: 1.25rem;
            }
        }
    
