extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Accueil'
    - var index = true
    - var sidenavStyle = 'sb-sidenav-light'

block content
    .container-fluid.min-vh-100.mb-5

        // Hero Section - Large and Bold with Background Image
        .row.hero-section.text-white.d-flex.align-items-center.justify-content-center(style="background: url('https://media.licdn.com/dms/image/v2/D4D3DAQGID0xSk1KoBg/image-scale_191_1128/image-scale_191_1128/0/1731150665321/winter_school_nextgenai_cover?e=1731758400&v=beta&t=SXmasTKJ_B0IU2SOlK-kOeKmv54bcxtPlNJO4pw3Wd8') center/cover no-repeat;")
            .col-12.text-center.py-5
                h1 Winter Data Science School 2024
                p 26 February - 1 March 2024 | Generative AI
                p Conference Center at EMINES, UM6P & École Centrale Casablanca
                .cta-buttons.mt-4
                    a.btn.btn-primary(href="#registration") Register Now
                    a.btn.btn-secondary.ml-3(href="#program") View Program

        // About Section
        .row.about-section.mt-5
            .col-12
                h2.text-center About the Event
                p.text-center Our Winter Data Science School focuses on Generative AI, aiming to provide participants with deep insights into generative techniques, practical skills, and networking opportunities. The event features keynotes, panel discussions, research presentations, a hackathon, and more.
                p.text-center Stay connected and updated by following us on 
                    a(href="#") LinkedIn.

        // Key Features Section
        .row.features-section.bg-light.mt-5
            .col-12.text-center.py-5
                h2 Key Features of the Event
            .col-4.text-center
                h3 Keynote Presentations
                p Learn from world-class experts in Generative AI
            .col-4.text-center
                h3 Hackathon
                p Join a hands-on AI challenge with top mentors
            .col-4.text-center
                h3 Networking
                p Connect with industry leaders and innovators

        // Registration Section
        .row.mt-5
            .col-12.text-center
                h2(id="registration") Registration
                p.text-center Registration is now open. Complete your registration to participate in this exciting event.
                a.btn.btn-primary(href="registration-link") Register Now

