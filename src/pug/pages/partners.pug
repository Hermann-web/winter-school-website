extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Partners'
    - var pageMainTitle = 'Our Partners'
    - var pageSubTitle = 'Sponsors and Supporters, key contributors to this event'
    - var sidenavStyle = 'sb-sidenav-dark'
    - var SponsorsList = [{ name: "EMINES (UM6P)", img: "assets/firms/emines.png", type: "Institution", description: "École des Mines de l’UM6P, hosting institution and key academic partner.", url: "https://emines.um6p.ma"}, { name: "École Polytechnique (l’X)", img: "assets/firms/polytechnique.png", type: "Institution", description: "École Polytechnique, top-tier French engineering school.", url: "https://www.polytechnique.edu"}, { name: "Groupe EMSI – Honoris United Universities", img: "assets/firms/emsi.png", type: "University", description: "Groupe EMSI, part of Honoris United Universities, supporting digital education in Africa.", url: "https://www.emsi.ma"}, { name: "OCP Group", img: "assets/firms/ocp.png", type: "Company", description: "OCP, a global leader in the phosphate industry, plays a vital role in sustainable agriculture, AI integration, and industrial innovation.", url: "https://www.ocpgroup.ma"}, { name: "UM6P", img: "assets/firms/um6p.png", type: "Institution", description: "Université Mohammed VI Polytechnique (UM6P), leading innovation in Africa through research and education.", url: "https://um6p.ma"}]
    - var CollaboratorsList = [{ name: "MBZUAI", img: "assets/firms/mbzuai.svg", type: "University", description: "MBZUAI, pioneering Artificial Intelligence research and education in UAE.", url: "https://mbzuai.ac.ae", bgcolor:"#828282"}, { name: "Telecom Paris", img: "assets/firms/telecom-paris.svg", type: "University", description: "Telecom Paris, top French engineering school for digital sciences.", url: "https://www.telecom-paris.fr"}, { name: "DeepMind", img: "assets/firms/deepmind.png", type: "Company", description: "DeepMind, cutting-edge AI research organization by Alphabet.", url: "https://deepmind.com"}, { name: "CentraleSupélec", img: "assets/firms/centrale-supelec.png", type: "University", description: "CentraleSupélec, top engineering school in France.", url: "https://www.centralesupelec.fr", bgcolor: "#181a1b"}, { name: "Inria", img: "assets/firms/inria.png", type: "Research Institute", description: "Inria, national research institute for digital science and technology in France.", url: "https://www.inria.fr"}, { name: "UC Berkeley", img: "assets/firms/berkeley.svg", type: "University", description: "University of California, Berkeley – a global AI research leader.", url: "https://www.berkeley.edu"}, { name: "EPFL", img: "assets/firms/epfl.svg", type: "University", description: "EPFL – École Polytechnique Fédérale de Lausanne, Switzerland.", url: "https://www.epfl.ch"}]

block content
    .container.d-flex.min-vh-100
        .col-0.col-lg-1.emp1 &nbsp;
        .col-12.col-lg-10.emp1.mt-3
            include includes/page-header.pug

            .m-4.partners-section.hover-effect.text-dark
                .container
                    // Sponsors Section
                    .row.justify-content-center.mt-4
                        .col-12.text-center
                            h3.text-light.mb-4 Sponsors
                    .row.justify-content-center
                        each sponsor in SponsorsList
                            .col-md-4.col-lg-4.text-center.mb-4
                                .card.feature-hover
                                    .card-body
                                        if sponsor.name
                                            img.card-img-top(
                                                style=`height: 100px; object-fit: contain; background-color: ${sponsor.bgcolor || 'transparent'}`,
                                                src=`${sponsor.img}`, 
                                                alt=sponsor.name, 
                                                class="img-fluid mb-3"
                                            )
                                            h4.text-dark.bold= sponsor.name
                                            p.text-muted= sponsor.description
                                            if sponsor.url
                                                a.btn.btn-outline-primary.btn-sm(href=sponsor.url, target="_blank") Learn More

                    // Collaborators Section
                    .row.justify-content-center.mt-5
                        .col-12.text-center
                            h3.text-light.mb-4 Collaborators
                    .row.justify-content-center
                        each collaborator in CollaboratorsList
                            .col-md-4.col-lg-3.text-center.mb-4
                                .card.feature-hover
                                    .card-body
                                        img.card-img-top(
                                            style=`height: 80px; object-fit: contain; background-color: ${collaborator.bgcolor || 'transparent'}`,
                                            src=`${collaborator.img}`, 
                                            alt=collaborator.name, 
                                            class="img-fluid mb-3"
                                        )
                                        h4.text-dark.bold= collaborator.name
                                        p.text-muted= collaborator.description
                                        if collaborator.url
                                            a.btn.btn-outline-primary.btn-sm(href=collaborator.url, target="_blank") Learn More
